<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/videoback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/allcolor">
        <TextView
            android:id="@+id/titile_tv"
            android:textColor="@color/allwhite"
            android:textSize="@dimen/Font_size"
            android:text="@string/register"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<TextView
    android:drawablePadding="@dimen/mine_marleft"
    android:gravity="center"
    android:text="@string/non_response"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:drawableTop="@drawable/non_response"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>