<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/visuallyimpaired_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/allcolor">
        <TextView
            android:id="@+id/titile_tv"
            android:textColor="@color/allwhite"
            android:textSize="@dimen/Font_size"
            android:text="@string/visually_impaired"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
<TextView
    android:layout_marginTop="@dimen/welcome_magtop"
    android:text="@string/evaluation"
    android:layout_gravity="center"
    android:textColor="@color/evaluation_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv"
            android:layout_marginTop="@dimen/register_iv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:drawablePadding="3dp"
            android:text="+10"
            android:layout_marginLeft="@dimen/hand_marg"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/iv"
            android:drawableLeft="@drawable/hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_marginRight="@dimen/hand_margRight"
            android:layout_centerVertical="true"
            android:text="+0"
            android:layout_alignRight="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center|bottom"
        android:src="@drawable/hand"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <ImageView
        android:layout_gravity="center|bottom"
        android:src="@drawable/green"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp" />
</LinearLayout>
</LinearLayout>